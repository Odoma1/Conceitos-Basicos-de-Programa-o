#include<stdio.h>
main()
{
	float n1, n2, e, m, d, p, di;
	printf("1->media entre numeros digitados, 2->diferença entre o maior e o menor, 3->produto entre os numeros digitados, 4->divisão do primeiro pelo segundo, qual a operação de sua escolha?:");
	scanf("%f", &e);	
		if(e>4)
	{
	printf("\n ERRO, ESCOLHA OUTRA OPÇÃO \n");
	  }
	else
	{
	printf("Informe o primeiro numero: ");
	scanf("%f", &n1);
	printf("Informe o segunda numero: ");
	scanf("%f", &n2);
     if(e==1)
 	{
	  m=(n1+n2)/2;
     printf("\n a media entre os numeros é igual à:%.2f", m);
	  }
		else if(e==2)
         {
		 d=(n1-n2);
		 printf("\n diferença entre o maior e o menor é igual à:%.2f", d);
		 }		
		else if(e==3)
		{
		p=(n1*n2);
		printf("\n produto entre os numeros digitados é igual à:%.2f", p);
		}		
		else
		{
		di= (n1/n2);
		printf("\n divisão do primeiro pelo segundo é igual à:%.2f", di);
		}
		}
}
