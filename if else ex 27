#include <stdio.h>
#include <math.h>

int main ()
{
	float peso, piH, piM, altura;
	char sexo;
	printf("Informe se Você é HOMEM(H) ou MULHER(M):");
	scanf("%c", sexo);
	printf("Informe seu peso:"");
	scanf("%f", peso);
	printf("Informe sua altura:"");
	scanf("%f", altura);
	piH=(72.7 * altura) - 58;
	piM=(62.1 * altura) – 44.7;
	if (sexo =="M")
	{
		printf("SEU PESO IDEAL E: %.2f", piM);
	}
	else 
	{
		printf("SEU PESO IDEAL E: %.2f", piH);
	}
}
