#include <stdio.h>
#include<math.h>

int main() {
    int numeros , pares = 0 , impares = 0;

    for (int i = 0; i < 5; i++) {
        printf("Digite o número %d: ", i + 1);
        scanf("%i", &numeros);

        if (numeros % 2 == 0) 
		{
            pares++;
        } else {
            impares++;  
        }
    }

    printf("\n--- Resultados ---\n");
    printf("Quantidade de números pares: %i\n", pares);
    printf("Quantidade de números imapres: %i\n", impares);

    return 0;
}

