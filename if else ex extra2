#include <stdio.h>
#include <math.h>

int main()
{
 float n1, n2, n3;
 printf("informe o primeiro numero:");
 scanf("%f", &n1);
 printf("informe o segundo numero:");
 scanf("%f", &n2);
 printf("informe o terceiro numero:");
 scanf("%f", &n3);
 if(n1>n2>n3) // 123/ 132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n1, n2, n3);
}
else if(n1>n3>n2) //123/132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n1, n3, n2);
}
else if(n2>n3>n1) //123/132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n2, n3, n1);
}
else if(n2>n1>n3) //123/132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n2, n1, n3);
}
else if(n3>n2>n1) //123/132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n3, n2, n1);
}
else  //123/132/231/213/321/312//
 {
 printf("\n %.2f \n \n %.2f \n \n %.2f \n ", n3, n1, n2);
}
}
