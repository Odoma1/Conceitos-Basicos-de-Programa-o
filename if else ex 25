#include <stdio.h>
#include <math.h>

int main ()
{
	int n1,n2;
	printf("Informe o primeiro numero:");
	scanf("%i", &n1);
	printf("Informe o segundo numero:");
	scanf("%i", &n2);
	if (n1 % n2 == 0)
	{
		printf("A divisao de %d por %d e exata.\n", n1, n2);
	}
	else 
	{
	 	printf("A divisao de %d por %d nao e exata.\n", n1, n2);
	}
}
