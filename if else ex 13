#include <stdio.h>
#include <math.h>

int main()
{
    float n1, n2, i;
    printf("Informe o custo de fabrica: ");
    scanf("%f", &n1);
    if(n1 < 15000)
    {
        n2 = n1 * 0.05;
        printf("\nlucro do distribuidor: %.2f\n", n2);
        printf("Valor imposto = ISENTO");
    }
    else if(n1 >= 15000 && n1 < 25000)
    {
        n2 = n1 * 0.1;
        i = n1 * 0.15;
        printf("\nlucro do distribuidor: %.2f\n", n2);
        printf("\nValor imposto: %.2f\n", i);
    }
    else 
    {
       n2 = n1 * 0.15;
        i = n1 * 0.2;
        printf("\nlucro do distribuidor: %.2f\n", n2);
        printf("\nValor imposto: %.2f\n", i)
    }


    return 0;
}
