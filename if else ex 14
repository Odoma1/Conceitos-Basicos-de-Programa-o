#include <stdio.h>
#include <math.h>

int main()
{
    float n1, n2, i;
    printf("Informe o seu salario: ");
    scanf("%f", &n1);
    if(n1 < 3000)
    {
        n2 = n1 * 0.15;
        printf("\nSeu salario vai ser aumentado em: %.2f\n", n2);
        	printf("\nSalario novo: %.2f\n", n2+n1);			
    }
    else if(n1 >= 3000 && n1 < 6000)
    {
         n2 = n1 * 0.10;
        printf("\nSeu salario vai ser aumentado em: %.2f\n", n2);
        	printf("\nSalario novo: %.2f\n", n2+n1);
    }
    else if(n1 >= 6000 && n1 < 9000)
    {
         n2 = n1 * 0.05;
        printf("\nSeu salario vai ser aumentado em: %.2f\n", n2);
        	printf("\nSalario novo: %.2f\n", n2+n1);
    }
    else 
    {
        printf("\nSeu salario vai ser aumentado em: SEM DIREITO DE AUMENTO");
        	printf("\nSalario novo: %.2f\n", n1);
    }

    return 0;
}
