#include<stdio.h>
main()
{
	float n1, n2, n3;
	printf("Informe o primeiro numero: ");
	scanf("%f", &n1);
	printf("Informe o segunda numero: ");
	scanf("%f", &n2);
	printf("Informe o terceiro numero: ");
	scanf("%f", &n3);
	if(n1>n2, n1>n3)
	{
	printf("\n o maior numero é o:%.2f", n1);
	}
		else if(n2>n1, n2>n3)
		{
		printf("\n o maior numero é o:%.2f", n2);
		}		
	else
	{
	printf("\n o maior numero é o:%.2f", n3);
	}
}
